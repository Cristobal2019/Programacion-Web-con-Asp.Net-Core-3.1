@model List<CristobalCruz.Models.Recibo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">LISTADO DE RECIBOS</h1>
          </div><!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Recibos</a></li>
              <li class="breadcrumb-item active">Listado</li>
            </ol>
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
      <div class="container-fluid">

@*------------------------------------------------------------------------
                  TODO MI CONTENIDO DE MI PAGINA
-----------------------------------------------------------------------*@

 <table id="tblPrestamos" class="table table-striped table-bordered" style="width:100%;">
       <thead>
           <tr>
               <th>No</th>
               <th>Descripcion</th>
               <th>Monto</th>
               <th>Id Prestamo</th>
               <th>Id Cliente</th>          
               <th>Opciones</th>
           </tr>
       </thead> 
        <tbody>
            @{
                foreach(var cliente in Model)
                {
                    <tr>
                <td>@cliente.Id</td>
                 <td>@cliente.Descripcion</td>
                 <td>@cliente.Monto</td>
                 <td>@cliente.PrestamoId</td>
                 <td>@cliente.ClienteId</td>               
                    <td> 
                      <a data-id="@cliente.ClienteId" class="btn btn-info verCliente" href="Javascript:void(0);">Cliente</a>                                
                     </td>
                </tr>   
                }
            }
        </tbody>
    </table>


   </div><!-- /.container-fluid -->
    </div>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->





<!-- Modal -->
<div class="modal fade" id="exampleModalCliente" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">DETALLE DE CLIENTE</h5>      
      </div>
      <div class="modal-body">
            <div class="container">
             <div class="row">
               <div class="col-12">
                    <label><strong>Nombre completo</strong></label><br />   
                  <span class="valorNombre"> </span>
              </div>
              <div class="col-12">
                    <label><strong>Dirección</strong></label><br />    
                   <span class="valorDireccion"> </span>
              </div>
              <div class="col-6">
                     <label><strong>Teléfono</strong></label><br />      
                   <span class="valorTelefono"> </span>
              </div>
               <div class="col-6">
                     <label><strong>Correo Electronico</strong></label><br />      
                   <span class="valorEmail"> </span>
              </div>
            </div>
          </div> 
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>       
      </div>
    </div>
  </div>
</div>

@section Scripts{ 
   
      <script src="~/js/misJsProyecto.js" type="text/javascript"></script>
   
}
