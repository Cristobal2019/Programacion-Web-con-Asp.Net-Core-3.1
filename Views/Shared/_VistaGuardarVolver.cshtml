<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
 
 <div class="col-12">
 <div class="float-right">
 <button type="submit" class="btn btn-primary" onclick="return functionConfirm(this)"><i class="fas fa-check"></i>&nbsp; Guardar</button>
  <a asp-action="Index" asp-controller="Home" class="btn btn-primary"><i class="fas fa-home"></i>&nbsp; Inicio</a>                   
</div>                     
 </div>
 
<script type="text/javascript">
    function functionConfirm(event) {
        swal({
            title: 'Estas seguro?',
            text: "Favor validar/confirmar su gestión",
            type: 'warning',
            showCancelButton: true,
            cancelButtonText: 'No',
            cancelButtonClass: 'btn btn-danger',
            showConfirmButton: true,
            confirmButtonText: 'Si',
            confirmButtonClass: 'btn btn-success'
        }, function (isConfirm) {
            if (isConfirm) {
                $('form').submit();
                return true;
            } else {
                return false;
            }
        });
        return false;
    }
</script>

