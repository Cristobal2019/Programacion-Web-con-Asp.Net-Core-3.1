@model IEnumerable<CristobalCruz.Models.Customer>

@{
    ViewData["Title"] = "Home Page";
}


<h1 class="text-center">CLIENTES</h1>

<div class="row">
    <div class="col-12">
        <div class="float-right">
            <a asp-action="create" asp-controller="Home" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo Cliente</a>

        </div>

    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card border">
            <h3><strong>Lista de clientes</strong></h3>
        </div>
        <div class="card-body">
            <div class="table-response">
                @if(Model.Count()>0)
                {
                    <table class="table tabla-bordered" id="Tablausuario" width="100%" cellpadding="0">
                        <thead>
                            <tr>
                               <th>@Html.DisplayNameFor(j =>j.Nombre) </th>
                               <th>@Html.DisplayNameFor(j =>j.Telefono) </th>
                               <th>@Html.DisplayNameFor(j =>j.Direccion) </th>
                               <th>@Html.DisplayNameFor(j =>j.Email) </th>
                               <th>Acciones </th>
                            </tr>                          
                        </thead>

                        <tbody>
                            @foreach(var item in Model)
                            {                                
                                <tr>
                                    <td>@Html.DisplayFor(j => item.Nombre)</td>
                                    <td>@Html.DisplayFor(j => item.Telefono)</td>
                                    <td>@Html.DisplayFor(j => item.Direccion)</td>
                                     <td>@Html.DisplayFor(j => item.Email)</td>
                                     <td>
                                         <a  class=" btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                                         <a  class=" btn btn-info" asp-action="details" asp-route-id="@item.Id">Detalle</a>
                                         <a  class=" btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                                     </td>
                                </tr>
                            }
                        </tbody>


                    </table>
                }
                else
                {
                    <p>No hay registros</p>
                }


            </div>

        </div>
    </div>

</div>